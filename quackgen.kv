<MyRoot>:

    label_random_string: label_random_string
    slider_length: slider_length
    slider_flags_lowercase: slider_flags_lowercase
    slider_flags_uppercase: slider_flags_uppercase
    slider_flags_numbers: slider_flags_numbers
    slider_flags_punctuation: slider_flags_punctuation
    btn_mode_random: btn_mode_random
    btn_mode_readable: btn_mode_readable
    btn_generate: btn_generate


    
    BoxLayout:
        padding: [50, 100, 50, 100]
        spacing: 20
        orientation: "vertical"

        # Name
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 1, 0.2
            text: "QuackGen"
            font_size: sp(48)
            color: 0.25, 0.685, 0.25, 1

        # Header
        BoxLayout:
            spacing: 50
            size_hint: 1, 0.3
            orientation: "horizontal"
            BoxLayout:
                size_hint: 0.5, 0.65
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    # background_color: [0.345, 0.345, 0.345, 1]
                    id: btn_mode_random
                    text: "Random"
                    font_size: sp(28)
                    on_press: root.pressed_random()
            
            BoxLayout:
                size_hint: 0.5, 0.65
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    id: btn_mode_readable
                    # background_color: [0.345, 0.345, 0.345, 1]
                    text: "Readable"
                    font_size: sp(28)
                    on_press: root.pressed_readable()
        
        # Output
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 1, 0.2
            id: label_random_string
            text: "-"
            font_size: sp(32)
        
        # Action buttons
        BoxLayout:
            spacing: 50
            size_hint: 1, 0.3
            orientation: "horizontal"
            
            BoxLayout:
                size_hint: 0.25, 0.65
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    # id: btn_reset
                    # disabled: True
                    text: "Reset"
                    font_size: sp(28)
                    on_press: root.reset()
            
            BoxLayout:
                size_hint: 0.5, 0.65
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    id: btn_generate
                    disabled: True
                    background_color: 0.25, 0.685, 0.25, 1
                    text: "Generate"
                    font_size: sp(28)
                    on_press: root.generate_random()

            BoxLayout:
                size_hint: 0.25, 0.65
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    # id: btn_copy
                    # disabled: True
                    text: "Copy"
                    font_size: sp(28)
                    on_press: root.copy_to_clipboard()
        
        # Settings sliders
        BoxLayout:
            size_hint: 1, 1.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: 50
            orientation: "vertical"

            # Length
            BoxLayout:
                spacing: 10
                size_hint: 1, 0.2
                orientation: 'horizontal'
                Label:
                    size_hint: 0.5, 1
                    text: "Length"
                    font_size: sp(18)
                Label:
                    size_hint: 0.2, 1
                    text: str(int(slider_length.value))
                    font_size: sp(18)
                Slider:
                    value: root.length
                    id: slider_length
                    range: (6, 20)
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.slider_update_length(*args)
            
            
            BoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: 20

                Label:
                    size_hint: 1, 0.5
                    text: "Weight of symbol groups"
                    font_size: sp(18)
                
                # lowercase
                BoxLayout:
                    spacing: 10
                    orientation: 'horizontal'
                    Label:
                        disabled: not(bool(slider_flags_lowercase.value))
                        size_hint: 0.5, 1
                        text: "Lowercase"
                        font_size: sp(18)
                    Label:
                        size_hint: 0.2, 1
                        text: str(int(slider_flags_lowercase.value))
                        font_size: sp(18)
                    Slider:
                        id: slider_flags_lowercase
                        value: root.flags[0]
                        range: 0, 100
                        step: 1
                        orientation: 'horizontal'
                        on_value: root.slider_update_flags(0, *args)

                # uppercase
                BoxLayout:
                    spacing: 10
                    orientation: 'horizontal'
                    Label:
                        disabled: not(bool(slider_flags_uppercase.value))
                        size_hint: 0.5, 1
                        text: "Uppercase"
                        font_size: sp(18)
                    Label:
                        size_hint: 0.2, 1
                        text: str(int(slider_flags_uppercase.value))
                        font_size: sp(18)
                    Slider:
                        id: slider_flags_uppercase
                        value: root.flags[1]
                        range: (0, 100)
                        step: 1
                        orientation: 'horizontal'
                        on_value: root.slider_update_flags(1, *args)

                # numbers
                BoxLayout:
                    spacing: 10
                    orientation: 'horizontal'
                    Label:
                        disabled: not(bool(slider_flags_numbers.value))
                        size_hint: 0.5, 1
                        text: "Numbers"
                        font_size: sp(18)
                    Label:
                        size_hint: 0.2, 1
                        text: str(int(slider_flags_numbers.value))
                        font_size: sp(18)
                    Slider:
                        id: slider_flags_numbers
                        value: root.flags[2]
                        range: (0, 100)
                        step: 1
                        orientation: 'horizontal'
                        on_value: root.slider_update_flags(2, *args)

                # punctuation
                BoxLayout:
                    spacing: 10
                    orientation: 'horizontal'
                    Label:
                        disabled: not(bool(slider_flags_punctuation.value))
                        size_hint: 0.5, 1
                        font_size: sp(18)
                        text: "Punctuation"
                    Label:
                        size_hint: 0.2, 1
                        text: str(int(slider_flags_punctuation.value))
                        font_size: sp(18)
                    Slider:
                        id: slider_flags_punctuation
                        value: root.flags[3]
                        range: (0, 100)
                        step: 1
                        orientation: 'horizontal'
                        on_value: root.slider_update_flags(3, *args)
            
            # advanced settings
            BoxLayout:
                size_hint: 1, 0.2
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: 20

                Label:
                    size_hint: 1, 0.2
                    text: "Advanced settings"
                    font_size: sp(18)
                
                BoxLayout:
                    spacing: 30
                    orientation: 'horizontal'

                    
                    BoxLayout:
                        spacing: 10
                        orientation: 'horizontal'

                        Label:
                            font_size: sp(18)
                            text: "Length increase"
                        
                        CheckBox:
                            size_hint: 0.5, 1
                            on_active: root.chbx_length_incr(self.active)
                        
                    BoxLayout:
                        spacing: 10
                        orientation: 'horizontal'

                        Label:
                            font_size: sp(18)
                            text: "Cluster separation"
                        
                        CheckBox:
                            size_hint: 0.5, 1
                            on_active: root.chbx_cluster_sep(self.active)
